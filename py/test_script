from TermClui import *
import sys
# import TermClui::FileSelect
colour = ""
paint = ""
name = ""
text = ""

def main():
    while True:
        task = choose('Test which TermClui.py function ?',
            ['ask','choose','confirm','edit','view','select_file']
        );
        task or exit()
        eval('test_'+task+'()')

